{
  "manifest_version": 3,
  "name": "AbleButton",
  "version": "1.0",
  "description": "一个智能的 AI 助手，可以帮助你分析网页内容、执行搜索和处理文件。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "sidePanel",
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "https://api.deepseek.com/*",
    "http://10.29.40.143:9655/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "AbleButton",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:11434 http://127.0.0.1:11434 https://api.deepseek.com http://10.29.40.143:9655"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
} 